.modal.fade.sm-email-modal#emailModal(tabindex="-1", role="dialog", aria-labelledby="emailModalLabel")
    .modal-dialog.modal-md
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h4
                    .modal-title Email

            .modal-body
                form(name="configEmailFrom")
                    .form-group
                        label.control-label Please enter your emails separated by comma
                        input.form-control(type="text", ng-model="emails")

            .modal-footer
                button.btn.btn-default(type="button", data-dismiss="modal") Close



